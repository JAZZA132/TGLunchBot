package com.launchBot.launchBot;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.web.server.WebServer;
import org.springframework.boot.web.servlet.context.ServletWebServerApplicationContext;
import org.springframework.stereotype.Component;

@Component
public class PortChecker {

    @Autowired
    private static ServletWebServerApplicationContext serverContext;

    public static int getRunningPort() {
        WebServer webServer = serverContext.getWebServer();
        if (webServer != null) {
            return webServer.getPort(); // 獲取當前運行的端口
        }
        return 1;
    }
}
